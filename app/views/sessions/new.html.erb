<%= form_tag sessions_path do %>

<div class="form-wrapper form-wrapper--login">
      <div class="form-group">
            <%= label_tag :email %>
            <%= text_field_tag :email, params[:email], :class => "form-group__field" %>
      </div>

      <div class="form-group">
            <%= label_tag :password %>
            <%= password_field_tag :password, "", :class => "form-group__field" %>
      </div>

      <div class="clearfix"></div>

      <div class="form-wrapper__footer">
            <%= submit_tag "Login", :class => "button button--blue" %>
      </div>
</div>

<% end %>
