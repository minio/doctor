<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Doctor</title>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/4.1.1/normalize.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/prism/1.2.0/themes/prism.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/prism/1.2.0/themes/prism-coy.css">
    <script src="https://cdn.jsdelivr.net/prism/1.2.0/prism.js"></script>
  </head>


  <body>
    <header id="header" class="clearfix">
      <div class="header__logo">
        <a href="">Doctor</a>
      </div>

      <nav class="header__menu">
        <ul>
          <% if current_user %>
            <li><a href="#">Home</a></li>
            <li><a href="#">GitHub</a></li>
            <li><a href="#">Contact</a></li>
            <li class="dropdown">
              <a href="#" data-toggle="dropdown" class="dropdown-toggle"><%= current_user.email %><span class="caret"></span></a>

              <ul class="dropdown-menu">
                <% if current_user.admin? %>
                    <li><a href="Profile"><%= link_to "DashBoard", hub_path %></a></li>
                <% else %>

                <% end %>
                <li><a href="Log Out"> <%= link_to "Logout", logout_path %></a></li>
              </ul>
            </li>

          <% else %>
            <li><a href="#">Home</a></li>
            <li><a href="#">GitHub</a></li>
            <li><a href="#">Contact</a></li>
            <li> <%= link_to "Log In", login_path %> </li>
          <% end %>
        </ul>
      </nav>
    </header>

    <div id="wrapper">
      <div class="wrapper__sidebar">
        <ul class="sidebar">
          <% @categories.each do |category| %>
              <li>
                <a href=""><%= category.title %></a>
                <% if category.documents.any? %>
                    <ul>
                      <% category.documents.each do |doc| %>
                          <li><%= link_to doc.name, document_path(doc.id) %></li>
                      <% end %>
                    </ul>
                <% end %>
          <% end %>
        </ul>
      </div>

      <div class="wrapper__page">
        <%= yield %>
      </div>

    </div>

    <%= render 'layouts/footer' %>

  </body>
</html>
