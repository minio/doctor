<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="<%= @mybrand.description %>">

    <title><%= @mybrand.title %></title>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>

    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">

    <%= render 'layouts/style' %>
  </head>

  <body <%= 'data-sidecar='+@mybrand.footer_chatlink  if !@mybrand.footer_chatlink.blank? %>>
    
    <%= render 'layouts/header' %>
    <div id="main">
      <div class="main__sidebar">
        <ul class="main__menu">
          <li>
            <a href="">Welcome Admin!</a>

            <ul class="main__menu__icons">
              <li><%= link_to (icon("line-chart")+ "Dashboard"), dashboard_path, :class => is_active_path(dashboard_path) %></li>
              <li><%= link_to (icon("th-large")+ "Categories"), categories_path, :class => is_active_controller('categories') %></li>
              <li><%= link_to (icon("file-text")+ "Documents"), documents_path, :class => is_active_controller('documents') %></li>
              <li><%= link_to (icon("gear")+ "Settings"), edit_brand_path(@mybrand.id), :class => is_active_controller('brands') %></li>
              <li><%= link_to (icon("user")+ "Users"), users_path, :class => is_active_controller('users') %></li>
              <li><%= link_to (icon("sign-out")+ "Logout"), logout_path %></li>
            </ul>
          </li>
         </ul>
      </div>

      <section class="main__page">
        <%= yield %>
      </section>

      <%= render 'layouts/footer' %>
    </div>

  </body>
</html>
