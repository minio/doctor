<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Doctor</title>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>

    <link href="https://fonts.googleapis.com/css?family=Roboto|Roboto+Slab|Roboto+Mono" rel="stylesheet">
  </head>


  <body>
    <header id="header" class="clearfix">
      <div class="header__trigger">
        <%= icon('bars') %>
      </div>

      <div class="header__logo">
        <% if @mybrand %>
            <%= link_to @mybrand.title, hub_path %>
        <% else %>
            Your Project
        <% end %>
      </div>

      <nav class="header__menu">
        <ul>
          <% if @mybrand %>
              <li><%= link_to "Home", @mybrand.home_link %></li>
              <li><%= link_to "Github", @mybrand.github_link %></li>
              <li><%= link_to "Gitter", @mybrand.gitter_link %></li>
          <% else %>
              <li><a href="#">Home </a></li>
              <li><a href="#">Github </a></li>
              <li><a href="#">Gitter </a></li>
          <% end %>

        </ul>
      </nav>
    </header>

    <div id="main">
      <div class="main__sidebar">
        <ul class="main__menu">
          <li>
            <a href="">Welcome Admin!</a>

            <ul class="main__menu__icons">
              <li><%= link_to (icon("th-large")+ "Categories"), categories_path, :class => current_class?(categories_path) %></li>
              <li><%= link_to (icon("file-text")+ "Documents"), documents_path, :class => current_class?(documents_path) %></li>
              <li><%= link_to (icon("adjust")+ "Brand"), brands_path, :class => current_class?(brands_path) %></li>
              <li><%= link_to (icon("user")+ "Users"), users_path, :class => current_class?(users_path) %></li>
            </ul>
          </li>
         </ul>
      </div>

      <section class="main__page">
        <%= yield %>
      </section>

      <%= render 'layouts/footer' %>
    </div>

    <script src="https://cdn.jsdelivr.net/prism/1.2.0/prism.js"></script>
  </body>
</html>
