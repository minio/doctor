<style type="text/css">
    <!-- Base font size and color -->
    <% if ((!@mybrand.font_size.blank?) || (!@mybrand.text_color.blank?)) %>
        body {
            <%= 'font-size: '+@mybrand.font_size+';' if !@mybrand.font_size.blank? %>
            <%= 'color: '+@mybrand.text_color+';' if !@mybrand.text_color.blank? %>
        }
    <% end %>

    <!-- Link -->
    <% if (!@mybrand.link_color.blank?) %>
        a,
        a:hover,
        a:focus {
            color: <%= @mybrand.link_color %>;
        }
    <% end %>

    <!-- Headings -->
    <% if (!@mybrand.heading_color.blank?) %>
        h1, h2, h3, h4, h5, h6 {
            color: <%= @mybrand.heading_color %>;
        }
    <% end %>

    <!-- Header -->
    <% if (!@mybrand.header_background_color.blank?) %>
        #header {
            background-color: <%= @mybrand.header_background_color %>;
        }
    <% end %>

    <!-- Sidebar -->
    <% if (!@mybrand.sidebar_background_color.blank?) %>
        .main__sidebar {
            background-color: <%= @mybrand.sidebar_background_color %>;
        }
    <% end %>

    <% if (!@mybrand.sidebar_link_color.blank?) %>
        .main__menu > li > ul > li > a,
        .main__menu > li > ul > li > a:hover,
        .main__menu > li > ul > li > a:focus {
            color: <%= @mybrand.sidebar_link_color %>;
        }
    <% end %>

    <% if (!@mybrand.menu_hover_background_color.blank?) %>
        .main__menu > li > ul > li > a.active,
        .main__menu > li > ul > li > a:hover {
            background-color: <%= @mybrand.menu_hover_background_color %>;
        }
    <% end %>

    <% if (!@mybrand.menu_title_color.blank?) %>
        .main__menu > li > a,
        .main__menu > li > a:hover,
        .main__menu > li > a:focus {
            color: <%= @mybrand.menu_title_color %>;
        }
    <% end %>

</style>