<header class="header">
    <nav class="top-menu">
        <%= link_to icon('bars'), '', :class => 'top-menu__trigger' %>

        <% if @mybrand %>
            <% if !@mybrand.home_link.blank?%><%= link_to icon('home'), @mybrand.home_link, :target => '_blank' %><% end %>
            <% if !@mybrand.github_link.blank?%><%= link_to icon('github'), @mybrand.github_link, :target => '_blank' %><% end %>
            <% if !@mybrand.bitbucket_link.blank?%><%= link_to icon('bitbucket'), @mybrand.bitbucket_link, :target => '_blank' %><% end %>
            <% if !@mybrand.slack_link.blank?%><%= link_to icon('slack'), @mybrand.slack_link, :target => '_blank' %><% end %>
            <% if !@mybrand.gitter_link.blank?%>
                <%= link_to @mybrand.gitter_link, :target => '_blank', :title => '' do %>
                    <i class="icon icon--gitter"></i>
                <% end %>
            <% end %>
            <% if !@mybrand.twitter_link.blank?%><%= link_to icon('twitter'), @mybrand.twitter_link, :target => '_blank' %><% end %>
        <% end %>
    </nav>

    <div class="search">
        <input type="text" class="search__input" placeholder="Search documents...">
    </div>

</header>
